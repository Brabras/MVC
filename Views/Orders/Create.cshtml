@model Order

@{
    //ViewData["Title"] = "Create";
    ViewBag.Title = "Заказать смартфон";
    Layout = "_Layout";
}
<h2>Order from</h2>
<div class="row">
    <div class="col-6">
        <form asp-action="Create" asp-controller="Orders" method="post">
            <div class="form-row">
                <label for="">
                    Имя поккупателя
                    <input asp-for="Name" type="text" placeholder="Имя" />
                </label>
                <label for="">
                    Адрес доставки
                    <input asp-for="Address" type="text" placeholder="Адрес" />
                </label>
                <label for="">
                    Номер телефона поккупателя
                    <input asp-for="ContactPhone" type="text" placeholder="Номер телефона" />
                </label>
            </div>
            <div class="form-row">
                <label for="">
                    Смартфон
                    <input disabled value="@Model.Product.Name" type="text" />
                </label>
                <input type="hidden" asp-for="ProductId" value="@Model.Product.Id" />
            </div>
            <button type="submit" class="btn btn-primary">Create order</button>
        </form>
    </div>
</div>
